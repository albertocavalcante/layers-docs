      "p",
      null,
      "The Ionic CLI can be configured to use various SSL settings for HTTP requests."
    ],
    " ",
    [
      "docs-code",
      {
        "language": "shell"
      },
      " ",
      [
        "pre",
        null,
        [
          "code",
          null,
          [
            "span",
            {
              "class": "token prompt"
            },
            "$ "
          ],
          "ionic config ",
          [
            "span",
            {
              "class": "token builtin class-name"
            },
            "set"
          ],
          " -g ssl.cafile /path/to/cafile ",
          [
            "span",
            {
              "class": "token comment"
            },
            "# file path to your CA root certificate"
          ],
          [
            "span",
            {
              "class": "token prompt"
            },
            "\n$ "
          ],
          "ionic config ",
          [
            "span",
            {
              "class": "token builtin class-name"
            },
            "set"
          ],
          " -g ssl.certfile /path/to/certfile ",
          [
            "span",
            {
              "class": "token comment"
            },
