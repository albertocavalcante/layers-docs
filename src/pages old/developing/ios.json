          " ",
          [
            "pre",
            null,
            [
              "code",
              null,
              [
                "span",
                {
                  "class": "token prompt"
                },
                " $ "
              ],
              "ionic capacitor ",
              [
                "span",
                {
                  "class": "token function"
                },
                "open"
              ],
              " ios"
            ]
          ],
          " "
        ],
        " ",
        [
          "p",
          null,
          " For Cordova, open Xcode. Use ",
          [
            "strong",
            null,
            "File"
          ],
          " » ",
          [
            "strong",
            null,
            "Open"
          ],
          " and locate the app. Open the app's ",
          [
            "code",
            null,
            "platforms/ios"
          ],
          " directory."
        ],
        " "
      ],
      " ",
      [
        "li",
        null,
        [
          "p",
          null,
          [
            "strong",
            null,
            "In ",
            [
              "b",
              null,
              "Project navigator"
            ],
            ", select the project root to open the project editor. Under the ",
            [
              "strong",
              null,
              "Identity"
