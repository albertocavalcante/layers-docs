  "schema": {
    "type": "schema",
    "name": "Informações da Home - Resposta",
    "spec": {
      "title": "@layers:getHomeInfo",
      "type": "object",
      "properties": {
        "badge": {
          "type": [
            "number",
            "boolean"
          ],
          "description": "O badge indica a se há notificações do seu app a serem vistas. Se for um booleano mostrará o badge quando for `true` e não quando for `false` e se for um número mostrará o badge com a contagem quando o valor for maior que 1",
          "required": false,
          "example": 1
        },
        "featured": {
          "type": "object",
          "description": "Informações de destaque",
          "required": false,
          "properties": {
            "title": {
              "type": "string",
              "description": "Título do grupo de cards",
              "required": true,
              "example": "1 novo item na agenda"
            },
            "cards": {
              "type": "string",
              "description": "Array de cards que estarão em destaque na home do Layers",
              "minItems": 1,
              "maxItems": 4,
              "required": true,
              "items": {
                "type": "object",
                "properties": {
                  "label": {
                    "type": "string",
                    "description": "Descrição curta do card",
                    "maxLength": 26,
                    "required": true,
                    "example": "Evento"
                  },
                  "title": {
                    "type": "string",
                    "description": "Título do card",
                    "maxLength": 50,
                    "required": true,
                    "example": "Festa Junina"
                  },
                  "description": {
                    "type": "string",
                    "description": "Descrição do card",
                    "required": false,
                    "example": "A festa junina será realizada no dia 12/06/2020. Todos estão convidados!"
                  },
                  "mood": {
                    "type": "string",
                    "enum": [
                      "neutral",
                      "attention",
                      "success",
                      "danger"
                    ],
                    "description": "Indica o tom do card para personalização do estilo",
                    "required": false,
                    "example": "neutral"
                  },
                  "image": {
                    "type": "string",
                    "description": "URL da imagem que aparece no card. O aspecto ideal é quadrado",
                    "required": false,
                    "example": "https://imagem.com"
                  },
                  "location": {
                    "type": "string",
                    "description": "Pode ser uma URL absoluta que será aberta no navegador ou uma URI de um recurso do Layers",
                    "required": true,
                    "example": "/portal/portalAlias/path/a/b/c"
                  }
                }
              }
            }
          }
        }
      },
      "externalDocs": {
        "description": "Entidade Informações da Home - Resposta",
        "url": "/docs/api/apihub/Informações da Home - Resposta/object"
      }
